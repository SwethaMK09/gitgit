import android.content.Intent
import android.os.Bundle
import android.util.Log
import android.widget.Button
import androidx.appcompat.app.AppCompatActivity

class Activity1 : AppCompatActivity() {

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val button: Button = findViewById(R.id.button)
        button.setOnClickListener {
            // Call function in Activity2
            callFunctionInActivity2()
        }
    }

    private fun callFunctionInActivity2() {
        val intent = Intent(this, Activity2::class.java)
        intent.putExtra("message", "Hi")
        startActivity(intent)
    }

    override fun onStart() {
        super.onStart()
        Log.d("Activity1", "onStart")
    }
}





import android.content.Intent
import android.os.Bundle
import android.util.Log
import android.widget.Button
import androidx.appcompat.app.AppCompatActivity

class Activity2 : AppCompatActivity() {

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val button: Button = findViewById(R.id.button)
        button.setOnClickListener {
            // Call function in Activity1
            callFunctionInActivity1()
        }
    }

    private fun callFunctionInActivity1() {
        val intent = Intent(this, Activity1::class.java)
        intent.putExtra("message", "Hi")
        startActivity(intent)
    }

    override fun onStart() {
        super.onStart()
        Log.d("Activity2", "onStart")
    }
}




